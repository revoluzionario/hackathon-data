# docker compose --env-file .env up -d
COMPOSE_PROJECT_NAME=data-platform

# Kafka / Confluent Platform
KAFKA_BROKER_ID=1
KAFKA_NUM_PARTITIONS=6
KAFKA_HEAP_OPTS=-Xms512M -Xmx1024M
SCHEMA_REGISTRY_HEAP_OPTS=-Xms256M -Xmx512M
CONNECT_HEAP_OPTS=-Xms512M -Xmx1024M
KSQL_HEAP_OPTS=-Xms512M -Xmx1024M
CONTROL_CENTER_HEAP_OPTS=-Xms512M -Xmx1024M

# External access (mapped to localhost by default)
KAFKA_LISTENERS=PLAINTEXT://0.0.0.0:9092,PLAINTEXT_HOST://0.0.0.0:29092
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092,PLAINTEXT_HOST://localhost:29092

# MinIO credentials (change in real envs!)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_REGION=us-east-1
MINIO_BUCKETS=landing,bronze,curated

# Databricks placeholders for future automation
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=replace-me
DATABRICKS_CATALOG=data_platform
DATABRICKS_SCHEMA=bronze
